{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",

    "moduleResolution": "Bundler",
    "types": ["node"],

    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",

    "allowJs": true,
    "isolatedModules": true,
    "allowImportingTsExtensions": true,
    "useDefineForClassFields": false,
    "experimentalDecorators": true,

    "skipLibCheck": true,
    "noEmit": true,

    "paths": {
      "@/*": ["./*"]
    }
  }
}